<?xml version="1.0" encoding="utf-8"?>
<config>

    <!--
      KIOSK SECTION
      We’re NOT using single-app Kiosk Mode here, just multi-app home.
      Leave kiosk empty and kiosk_mode_enabled=0 in preferences.
    -->
    <kiosk>
        <!-- Intentionally left empty for multi-app launcher -->
    </kiosk>

    <!--
      APPLICATIONS SECTION
      These are the tiles/icons users see on the EHS home screen.
    -->
    <applications>

        <!-- xSolo (MAUI app) -->
        <application
            label="xSolo"
            package="com.marken.solomobileapp"
            activity="crc64600d9de7c1b27191.MainActivity" />

        <!-- DataWedge (DWDemo UI) -->
        <application
            label="DataWedge"
            package="com.symbol.datawedge" />

        <!-- Zebra Bluetooth app -->
        <application
            label="Bluetooth"
            package="com.zebra.bluetooth" />

        <!-- Android Settings (for troubleshooting/admin) -->
        <application
            label="Settings"
            package="com.android.settings" />

    </applications>

    <!--
      TOOLS SECTION
      Apps available under the Tools menu in Admin/User modes.
      You can trim this down later if needed.
    -->
    <tools>

        <!-- Keep DataWedge available from Tools -->
        <application
            label="DataWedge"
            package="com.symbol.datawedge" />

        <!-- Settings in Tools as well -->
        <application
            label="Settings"
            package="com.android.settings" />

        <!-- Optional: Bluetooth from Tools -->
        <application
            label="Bluetooth"
            package="com.zebra.bluetooth" />

    </tools>

    <!--
      PASSWORDS SECTION
      DO NOT manually populate. EHS will write an encrypted value here
      after you set the Admin password from the UI.
    -->
    <passwords>
        <admin></admin>
    </passwords>

    <!--
      PREFERENCES SECTION
      Based on the latest EHS Advanced Settings docs.
      Controls title, restrictions, etc.
    -->
    <preferences>

        <!-- Show serial number in the title bar -->
        <title>
            <value>xSolo-AOSP #[serial_number]</value>
        </title>

        <!-- Icon label colours (defaults) -->
        <icon_label_background_color>#00FFFFFF</icon_label_background_color>
        <icon_label_text_color>#FFFFFFFF</icon_label_text_color>

        <!-- Orientation: blank = allow rotation / system default -->
        <orientation></orientation>

        <!-- No auto-launch single-app kiosk -->
        <auto_launch_enable>0</auto_launch_enable>
        <service_auto_launch_enable>0</service_auto_launch_enable>

        <!-- No custom wallpaper yet (you can add later) -->
        <wallpaper></wallpaper>

        <!--
          Kiosk Mode flag (single app). 0 = OFF.
          We are using multi-app “kiosk style” instead, via the Applications list.
        -->
        <kiosk_mode_enabled>0</kiosk_mode_enabled>

        <!-- Lock down quick stuff on keyguard -->
        <keyguard_camera_disabled>1</keyguard_camera_disabled>
        <keyguard_search_disabled>1</keyguard_search_disabled>

        <!-- Security-related restrictions -->
        <usb_debugging_disabled>1</usb_debugging_disabled>
        <system_settings_restricted>1</system_settings_restricted>

        <!-- Recent apps button & view disabled -->
        <recent_apps_button_disabled>1</recent_apps_button_disabled>
        <recent_apps_access_disabled>1</recent_apps_access_disabled>

        <!-- Wi-Fi info on title bar (leave hidden for now) -->
        <wireless_info>
            <show_ip_address>0</show_ip_address>
            <show_mac_address>0</show_mac_address>
            <show_bssid>0</show_bssid>
            <show_ssid>0</show_ssid>
            <show_scan_result>0</show_scan_result>
        </wireless_info>

        <!-- Screen blanking feature (independent of Android timeout) -->
        <screen_blanking>
            <blanking_enabled>0</blanking_enabled>
            <speed_threshold>10</speed_threshold>
            <blanking_mode>1</blanking_mode>
        </screen_blanking>

        <!-- Optional: user_options for icon size, etc. -->
    </preferences>

</config>
